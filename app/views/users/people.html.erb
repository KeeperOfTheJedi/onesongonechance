<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Member since</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.updated_at.strftime("%Y %B %d, %l:%M%P") %></td>
        <td><%= link_to 'Follow', follow_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
