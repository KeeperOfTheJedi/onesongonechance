<% if !!@song %>

    <h1 style="color: white;font-weight: bold;"><%= @song.name %></h1>
    <div id="youtube_video">
      <% @videourl = "http://www.youtube.com/embed/" + @song.utubeid + "?autoplay=1&cc_load_policy=1&fs=1" %>
        <div class="video-container"><iframe src= <%= @videourl %> + frameborder="0" allowfullscreen></iframe>
        </div>

  </div>

  <div id="current_song" style="display: none;"> <%=params[:id] %></div>
    <script type="text/javascript">
    var secondsCountDown = <%= @song.length + 10%>
    display = "";
    var songid = $("#current_song").text();
    pingsong(secondsCountDown, display, "song", songid);
  </script>

<% else %>
Don't have permission
<% end %>

<!-- Modal -->
  <div class="modal fade" id="conversation-modal" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" style="width: 600px">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <center><h2 class="modal-title">It's a match!</h2><center>
          You and someone are listenning this song
        </div>
        <div class="modal-footer">
        <center><a class="btn btn-default" href="#" id="go_conversation">Go conversation</a></center>
      
        </div>
      </div>
      
    </div>
  </div>