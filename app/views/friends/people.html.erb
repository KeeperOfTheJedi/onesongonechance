<% if @following.present? %>
  <h4>My Friends</h4>
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th>Member since</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @following.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.updated_at.strftime("%Y %B %d, %l:%M%P") %></td>
          <td><%= link_to 'Bye Bye', unfollow_path(user) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<% if @not_following.present? %>
  <h4>Other People</h4>
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th>Member since</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @not_following.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.updated_at.strftime("%Y %B %d, %l:%M%P") %></td>
          <td><%= link_to 'Follow', follow_path(user) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>