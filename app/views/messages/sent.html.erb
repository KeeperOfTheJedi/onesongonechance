<% if @messages.present? %>
  <h4>Sent messages</h4>
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>Recipient</th>
        <th>Title</th>
        <th>Sent</th>
        <th>Read at</th>
      </tr>
    </thead>
    <tbody>
      <% @messages.each do |message| %>
        <tr>
          <td><%= message.recipient %></td>
          <td><%= message.title %></td>
          <td><%= message.created_at.strftime("%Y %B %d, %l:%M%P") %></td>
          <td>
            <% if message.read_at.present? %>
              <span class="label label-success">
                <%= message.read_at.strftime("%Y %B %d, %l:%M%P") %>
              </span>
            <% else %>
              <span class="label label-warning">
                Not read yet.
              </span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h1>No messages...</h1>
<% end %>