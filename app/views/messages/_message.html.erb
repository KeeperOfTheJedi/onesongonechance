<ul class="ChatLog">

  <%= div_for message do %>
  <% if message.sender_id == current_user.id %>
  <li class="ChatLog__entry ChatLog__entry_mine">
    <% else %>
    <li class="ChatLog__entry">
      <% end %>
      <p class="ChatLog__message">
        <%=  Message.handling_emotion(message.content).html_safe %>
        <time class="ChatLog__timestamp">
          <%= message.created_at.localtime.to_s(:time) %>
        </time>
      </p>
    </li>

    <% end %>
  </ul>